{
  "extends": [
    "stylelint-config-standard",
    "@dweidner/stylelint-config-property-order"
  ],
  "plugins": ["stylelint-order", "stylelint-scss"],
  "rules": {
    "order/order": [
      "dollar-variables",
      "at-rules",
      {
        "type": "at-rule",
        "name": "include"
      },
      "declarations",
      {
        "type": "at-rule",
        "name": "media"
      },
      {
        "type": "at-rule",
        "name": "keyframes"
      },
      "rules"
    ],
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "color-named": "never",
    "font-weight-notation": "numeric"
  }
}
