extends ../../templates/template-base

block description
  meta(name="description" content="Мы подобрали для вас самые подходящие номера под ваши требования, вам осталось лишь выбрать.")

block keywords
  meta(name="keywords" content="подобрать номера отель toxin, выбрать номер в отеле toxin")

block title
  title Отель Toxin | Поиск номеров

block styles
  link(rel="stylesheet" href="./rooms-page.scss")

block content
  include ../../utilities/mixins-pug

  include ../../components/main-header/main-header
  main.rooms-page
    h1.visually-hidden Поиск номеров
    .container
      section.filter.js-filter
        h2.visually-hidden Фильтр номеров
        button.filter__show-button(type="button") Показать фильтр
        button.filter__close-button.filter__close-button_hidden(type="button" aria-label="Закрыть фильтр")
        form.filter__form(action="https://echo.htmlacademy/ru" method="post")
          p.filter__group
            label(for="field-date") Даты пребывания в отеле
            +field-dropdown(id="field-date" name="date" value="19 авг - 23 авг")
          p.filter__group
            label(for="field-guests") Гости
            +field-dropdown(id="field-guests" name="guests" value="3 гостя, 1 младенец")
          p.filter__group
            +range("field-price", "Диапазон цены", "Стоимость за сутки пребывания в номере")(name="price")
          fieldset.filter__group
            legend.filter__group-title Дополнительные возможности
            ul.filter__list
              li.filter__item
                +checkbox-poor("field-smoke", "Можно курить")(name="smoke")
              li.filter__item
                +checkbox-poor("field-pets", "Можно с питомцами")(name="pets" checked)
              li.filter__item
                +checkbox-poor("field-allow-guests", "Можно пригласить гостей (до 10 человек)")(name="allow-guests" checked)
          fieldset.filter__group
            legend.filter__group-title Доступность
            ul.filter__list
              li.filter__item
                +checkbox-rich("field-wide-aisle", "Широкий коридор", "Ширина коридоров в номере не менее 91 см.")(name="wide-aisle")
              li.filter__item
                +checkbox-rich("field-hepler", "Помощник для инвалидов", "На 1 этаже вас встретит специалист  и проводит до номера.")(name="helper")
          p.filter__group
            label(for="field-comfort") Удобства номера
            +field-dropdown(id="field-comfort" data-dropdown="comfort" name="comfort" placeholder="Выберите удобства" readonly)
          fieldset.filter__group
            +checkbox-expandable("Дополнительные удобства", {
              "Завтрак": "breakfast",
              "Письменный стол": "desk",
              "Стул для кормления": "chair",
              "Кроватка": "bed",
              "Телевизор": "tv",
              "Шампунь": "shampoo"})
      section.rooms
        h2.rooms__title Номера, которые мы для вас подобрали
        ul.rooms__list
          li.rooms__item
            a(href="../room-page/room-page.pug")
              +room({
