mixin dropdown-guests
  span.dropdown.js-dropdown-guests
    input.dropdown__field(type="text")&attributes(attributes)
    span.dropdown__container.dropdown__container_hidden
      span.dropdown__item
        b.dropdown__title Взрослые
        span.dropdown__count
          button.dropdown__button.dropdown__button_type_delete.dropdown__button_disabled(type="button")
          span.dropdown__amount 0
          button.dropdown__button.dropdown__button_type_add(type="button")
      span.dropdown__item
        b.dropdown__title Дети
        span.dropdown__count
          button.dropdown__button.dropdown__button_type_delete.dropdown__button_disabled(type="button")
          span.dropdown__amount 0
          button.dropdown__button.dropdown__button_type_add(type="button")
      span.dropdown__item
        b.dropdown__title Младенцы
        span.dropdown__count
          button.dropdown__button.dropdown__button_type_delete.dropdown__button_disabled(type="button")
          span.dropdown__amount.dropdown__amount_baby 0
          button.dropdown__button.dropdown__button_type_add(type="button")
      span.dropdown__item.dropdown__item_shift-from-top_20
        button.dropdown__control-button.dropdown__control-button_type_clear.dropdown__control-button_disabled(type="button") Очистить
        button.dropdown__control-button.dropdown__control-button_type_apply(type="button") Применить

    