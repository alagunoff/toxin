mixin dropdown({theme = "", state =  "", jsClasses = ""} = {})
  -
    let className = theme === "" ? "" : `dropdown_theme_${theme}`
    className = `${className} ${state === "" ? "" : `dropdown_${state}`}`
    className = `${className} ${jsClasses}`.trim()
    
  span.dropdown(class= className)
    input.dropdown__field(type="text")&attributes(attributes)
    if block
      block
    