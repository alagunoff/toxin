mixin form-login
  article.login
    h2.login__title Войти
    form.login__form(action="https://echo.htmlacademy.ru" method="post")
      p.login__group
        label.visually-hidden(for="field-email") Введите email
        +text-field-default(id="field-email" name="email" type="email" placeholder="Email")
      p.login__group
        label.visually-hidden(for="field-password") Введите пароль
        +text-field-default(id="field-password" name="password" type="password" placeholder="Пароль")
      p.login__group
        +button-with-purple-gradient-and-arrow("войти")(type="submit")
    .login__registration
      span.login__text Нет аккаунта на Toxin?
      +link-with-border-gradient("создать")(href="../../pages/registration-page/registration-page.pug")