mixin c-pagination(classes)
    div(class= classes + "__wrapper c-pagination__wrapper")
        ul(class= classes + "__list c-pagination__list")
            li(class= classes + "__item c-pagination__item c-pagination__item--current")
                a(class= classes + "__link c-pagination__link") 1
            li(class= classes + "__item c-pagination__item")
                a(class= classes + "__link c-pagination__link" href="#") 2
            li(class= classes + "__item c-pagination__item")
                a(class= classes + "__link c-pagination__link" href="#") 3
            li(class= classes + "__item c-pagination__item")
                a(class= classes + "__link c-pagination__link") ...
            li(class= classes + "__item c-pagination__item")
                a(class= classes + "__link c-pagination__link" href="#") 15
            li(class= classes + "__item c-pagination__item c-pagination__item--next-page")
                a(class= classes + "__link c-pagination__link" href="#")
                    svg(width="18" height="18" fill="none" xmlns="http://www.w3.org/2000/svg")
                        path(d="M9 .984L17.016 9 9 17.016l-1.406-1.407 5.578-5.625H.984V8.016h12.188L7.594 2.39 9 .984z" fill="#fff")
        p(class= classes + "__description c-pagination__description") 1 – 12 из 100+ вариантов аренды