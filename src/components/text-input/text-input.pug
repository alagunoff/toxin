mixin text-input({ theme, id, type = "text", name, placeholder } = {})
  - const themeClass = theme ? `text-input_theme_${theme}` : "";

  .text-input(class = themeClass)
    input.text-input__field(
      id = id
      type = type 
      name = name 
      placeholder = placeholder)&attributes(attributes)
    if theme === "newsletter"
      button.text-input__submit-button(type="submit" aria-label="Подписаться на рассылку")
