article.find-room
    h2.find-room__title Найдём номера под ваши пожелания
    form.find-room__form(action="https://echo.htmlacademy.ru" method="post")
        div.find-room__group
            p.find-room__item
                +c-field-date-dropdown("find-room__field js-find-room__from datepicker-here", "find-room__from", "Прибытие")(type="text" name="from" placeholder="ДД.ММ.ГГГГ" data-range="true")
            p.find-room__item
                +c-field-date-dropdown("find-room__field js-find-room__to", "find-room__to", "Выезд")(type="text" name="to" placeholder="ДД.ММ.ГГГГ")
        p.find-room__item
                +c-field-dropdown("find-room__field js-find-room__guests", "find-room__guests", "Гости")(type="text" name="guests" placeholder="Сколько гостей")
        p.find-room__item
                +link-purple-gradient-arrow("Подобрать номер")(href="#")