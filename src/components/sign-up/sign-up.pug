include ../text-input/text-input
include ../radio-input/radio-input
include ../checkbox-input/checkbox-input
include ../button/button

mixin sign-up({title = "Регистрация аккаунта"} = {})
  article.sign-up
    h2.sign-up__title= title
    form.sign-up__form(action="https://echo.htmlacademy.ru" method="post")
      fieldset.sign-up__group
        p.sign-up__item
          label.sign-up__label.sign-up__label_hidden(for="field-name") Введите имя
          +text-input(id="field-name" name="name" placeholder="Имя")
        p.sign-up__item
          label.sign-up__label.sign-up__label_hidden(for="field-surname") Введите фамилию
          +text-input(id="field-surname" name="surname" placeholder="Фамилия")
        ul.sign-up__list
          -
            const radioInputs =
            [
              {"id": "field-gender-male", "title": "Мужчина", "name": "gender", "value": "male", "checked": true},
              {"id": "field-gender-female", "title": "Женщина", "name": "gender", "value": "female"}
            ];
          each radio in radioInputs
            li.sign-up__item
              +radio-input(radio)
      p.sign-up__group
        label.sign-up__label(for="field-birthday") Дата рождения
        +text-input(id="field-birthday" name="birthday" placeholder="ДД.ММ.ГГГГ")
      fieldset.sign-up__group
        legend.sign-up__group-title данные для входа в сервис
        p.sign-up__item
          label.sign-up__label.sign-up__label_hidden(for="field-email") Введите email
          +text-input({"type": "email"})(id="field-email" name="email" placeholder="Email")
        p.sign-up__item
          label.sign-up__label.sign-up__label_hidden(for="field-password") Введите пароль
          +text-input({"type": "password"})(id="field-password" name="password" placeholder="Пароль")
      .sign-up__group
        +checkbox-input({"id": "field-newsletter", "title": "Получать спецпредложения", "theme": "toggle"})(name="newsletter")
      p.sign-up__group
        +button({"text": "перейти к оплате", "theme": "submit", "type": "submit"})
    .sign-up__login
      span.sign-up__text Уже есть аккаунт на Toxin?
      span.sign-up__login-button
        +button({"text": "войти", "theme": "account-action", "isLink": true, "href": "../../pages/login-page/login-page.pug"})
