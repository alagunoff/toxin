figure(class="c-donut__wrapper")
    div(class="c-donut__chart")
        svg(class="c-donut__donut" width="100%" height="100%")
            circle(class="c-donut__segment c-donut__segment--great" cx='50%' cy='50%' r='58' fill='transparent' stroke='url(#gradient1)' stroke-width='4' stroke-dasharray='180 400' transform="rotate(91 58 58)")
            defs
                linearGradient(id="gradient1")
                    stop(offset="0" stop-color="#ffe39d")
                    stop(offset="1" stop-color="#ffba9d")
            circle(class="c-donut__segment c-donut__segment--satisfactory" cx='50%' cy='50%' r='55' fill='transparent' stroke='url(#gradient2)' stroke-width='10' stroke-dasharray='84 400' transform="rotate(-89 60 60)")
            defs
                linearGradient(id="gradient2")
                    stop(offset="0" stop-color="#a49ffd")
                    stop(offset="1" stop-color="#bb9dff")
            circle(class="c-donut__segment c-donut__segment--good" cx='50%' cy='50%' r='58' fill='transparent' stroke='url(#gradient3)' stroke-width='4' stroke-dasharray='90 400')
            defs
                linearGradient(id="gradient3")
                    stop(offset="0" stop-color="#6cd1c1")
                    stop(offset="1" stop-color="#6ecf99")
            g(class="c-donut__text")
                text(x="50%", y="50%") 260
                text(x="50%", y="50%" transform="translate(0 19)") голосов
    figcaption(class="c-donut__description")
        ul(class="c-donut__list")
            li(class="c-donut__item c-donut__item--great") Великолепно
            li(class="c-donut__item c-donut__item--good") Хорошо
            li(class="c-donut__item c-donut__item--satisfactory") Удовлетворительно
            li(class="c-donut__item c-donut__item--disappointed") Разачарован