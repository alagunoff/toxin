include ../button/button

mixin header({theme = ""} = {})
  - const className = theme ? `header_theme_${theme}` : "";

  header.header.js-header(class= className)
    .header__container
      a.header__logo(href="index.html")
        img.header__logo-image(src="../../images/logo.svg" alt="Отель Toxin")
      button.header__burger-button.js-header__burger-button(aria-label="Показать меню")
      nav.header__navigation.js-header__navigation
        ul.header__site-navigation
          -
            const items =
            [
              {"title": "Компоненты", "theme": "bold", "link": "../components-page/components-page.pug"},
              {"title": "О нас", "link": "/mock-address/change-me"},
              {"title": "Услуги", "theme": "has-submenu", "link": "/mock-address/change-me"},
              {"title": "Вакансии", "link": "/mock-address/change-me"},
              {"title": "Новости", "link": "/mock-address/change-me"},
              {"title": "Соглашения", "theme": "has-submenu", "link": "/mock-address/change-me"}
            ];
          each item in items
            - const className = "theme" in item ? `header__item_theme_${item.theme}` : "";

            li.header__item(class= className)
              a.header__link(href= item.link)= item.title
        ul.header__user-navigation
          li.header__item
            +button({"text": "войти", "theme": "account-action", "size": "small", "isLink": true, "href": "../login-page/login-page.pug"})
          li.header__item
            +button({"text": "зарегистрироваться", "theme": "registration", "size": "small", "isLink": true, "href": "../registration-page/registration-page.pug"})
        ul.header__user-menu
          li.header__item
            a.header__link(href="/mock-address/change-me") Артём Лагунов
