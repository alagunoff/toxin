mixin main-footer-poor
  footer.main-footer.main-footer_theme_poor
    .container
      .main-footer__info
        a.main-footer__logo(href="../index/index.pug")
          img.main-footer__logo-image(src="../../logo.svg" alt="Отель Toxin")
        p.main-footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
      ul.main-footer__list
        -
          const items = 
          [
            {"theme": "twitter", "description": "Твиттер"},
            {"theme": "facebook", "description": "Фейсбук"},
            {"theme": "instagram", "description": "Инстаграм"}
          ]
        each item in items
          li.main-footer__item
            a(class=`main-footer__link main-footer__link_theme_${item.theme}` href="/mock-address/change-me" arail-label=`${item.description}`)