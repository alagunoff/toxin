mixin checkboxInput({id = "", title = "", theme = "", description = "", jsClasses = ""} = {})
  -
    let className = theme === "" ? "" : `checkbox-input_theme_${theme}`
    className = `${className} ${jsClasses}`.trim()
    
  div.checkbox-input(class= className)
    if block
      block
    else
      input.checkbox-input__field.checkbox-input__field_hidden(id=id type="checkbox")&attributes(attributes)
      label.checkbox-input__label(for=id)= title
      if description
        span.checkbox-input__description= description
      