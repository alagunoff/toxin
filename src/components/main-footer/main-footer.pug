mixin main-footer
  footer.main-footer
    .main-footer__main-info
      .container
        .main-footer__site-info
          a.main-footer__logo(href="../index/index.pug")
            img.main-footer__logo-image(src="../../logo.svg" alt="Отель Toxin" width="106" height="40")
          p.main-footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
        nav.main-footer__navigation
          .main-footer__item
            b.main-footer__title Навигация
            ul.main-footer__list
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") О нас
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") Новости
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") Служба поддержки
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") Услуги
          .main-footer__item
            b.main-footer__title О нас
            ul.main-footer__list
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") О сервисе
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") Наша команда
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") Вакансии
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") Инвесторы
          .main-footer__item
            b.main-footer__title Служба поддержки
            ul.main-footer__list
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") Соглашения
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") Сообщества
              li.main-footer__item
                a.main-footer__link(href="/mock-address/change-me") Связь с нами
        .main-footer__newsletter
          b.main-footer__title Подписка
          p.main-footer__text Получайте специальные предложения и новости сервиса
          form.main-footer__form(action="https://echo.htmlacademy.ru" method="post")
            label.visually-hidden(for="field-subscription") Введите email
            +text-field-subscription(id="field-subscription" name="email" placeholder="Email")
    .main-footer__other-info
      .container
        p.main-footer__copyright Copyright © 2019 Toxin отель. Все права зачищены.
        ul.main-footer__list
          li.main-footer__item
            a.main-footer__link.main-footer__link_type_twitter(href="/mock-address/change-me" arail-label="Твиттер")
          li.main-footer__item
            a.main-footer__link.main-footer__link_type_facebook(href="/mock-address/change-me" arail-label="Фейсбук")
          li.main-footer__item
            a.main-footer__link.main-footer__link_type_instagram(href="/mock-address/change-me" arail-label="Инстаграм")